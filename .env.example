# Ambiente
NODE_ENV=development
RENDER=false
PUPPETEER_EXECUTABLE_PATH="C:\Program Files\Google\Chrome\Application\chrome.exe"

# Autenticação
JWT_SECRET=your_jwt_secret_here

# E-mails com roles = Admin e Senha padrão dos funcionários
ADMIN_EMAILS=admin1@example.com,admin2@example.com
EMPLOYEES_PASSWORD=password_standard_all_employees

# E-mail
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_secure_password
MAIL_FROM_NAME="Equipe"
MAIL_FROM_ADDRESS=suporte@example.com

# URLs
API_URL=https://meusistema.com
APP_URL=https://meusite.com

# Redis
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_PREFIX=prefix:
REDIS_TLS=true
REDIS_URL=redis://localhost:6379/0

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=default

# Banco de Dados
DATABASE_URL=postgresql://user:password@host:port/database

# Feature flags (formato JSON válido)
FEATURE_FLAGS={"enableNewFeature":true,"experimentalMode":false}

# Logs
LOG_LEVEL=info

# Rate limiting (Throttle)
THROTTLE_TTL_DEFAULT=60
THROTTLE_LIMIT_DEFAULT=100
THROTTLE_TTL_STRICT=1
THROTTLE_LIMIT_STRICT=5

# Cache
CACHE_TTL=5
CACHE_MAX_ITEMS=100
CACHE_STORE=memory

# Sharp (configuração para Linux)
NPM_CONFIG_PLATFORM=linux
NPM_CONFIG_ARCH=x64
NPM_CONFIG_LIBC=glibc